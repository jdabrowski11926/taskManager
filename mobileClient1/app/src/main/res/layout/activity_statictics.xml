<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StaticticsActivity">

    <Button
        android:id="@+id/staticticsButtonBack"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/TableLayoutStatictics"
        android:layout_width="409dp"
        android:layout_height="653dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:id="@+id/staticticsRowNames"
            android:layout_width="match_parent"
            android:layout_height="80dp" >

            <TextView
                android:id="@+id/staticticsCategoryName"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="Category name" />

            <TextView
                android:id="@+id/staticticsCategoryAmount"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="Amount of tasks" />

            <TextView
                android:id="@+id/staticticsCategoryTime"
                android:text="Time for all tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>